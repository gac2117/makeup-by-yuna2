<h1><%= @client.name %>'s Profile Page</h1>
<div id='flash' class='error'>
  <%= flash[:error] %>
</div>
<div id='flash' class='notice'>
  <%= flash[:notice] %>
</div><br>

<img width="200" src="<%= @client.extra %>"><br><br>
<button id="edit_profile"><%= link_to "Edit Profile", edit_client_path(@client) %></button>
<br><br>

<table class="client-app-table">
  <thead>
    <tr>
      <th>Appointment Date and Time</th>
      <th>Makeup Artist</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td id="app_date"></td>
      <td id="app_artist"></td>
      <td id="app_details"></td>
    </tr>
  </tbody>

</table><br>

<button id="new_app"><%= link_to "New Appointment", new_client_appointment_path(@client) %></button>
<br><br>
<br><br>

<button id="artist_apps"><%= link_to "Go Back", appointments_path %></button>

